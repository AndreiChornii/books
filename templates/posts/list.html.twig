{% extends "base.html.twig" %}


{% block body %}
    <h1>List books</h1>
    <a class="btn" href="/post/add">Add book</a>
    
    <div class="post-list">
        {% for post in posts %}
            <div class="post">
                <h3>{{post.title}}</h3>
                <i>{{post.dateUpdate}}</i>
                <a href = "/post/edit/{{post.id}}">Edit</a>
                <a href = "/post/{{post.id}}">More...</a>
                <a href = "/post/remove/{{post.id}}">Remove</a>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
